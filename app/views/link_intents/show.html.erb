<%# Asegúrate de que esta etiqueta de script esté en la página donde quieres usar el widget. %>
<script src="https://js.fintoc.com/v1/"></script>

<script>
  document.addEventListener('DOMContentLoaded', (event) => {
    const widget = Fintoc.create({
      widgetToken: '<%= @link_intent.widget_token %>',
      publicKey: 'pk_test_xwUGiHD3-zsftKEioAvCGjAk6qQrTS65',
      holderType: '<%= @link_intent.holder_type %>',
      product: '<%= @link_intent.product %>',
      onSuccess: () => { console.log('Link Intent Finished'); },
      onExit: () => { console.log('Link Intent Failed or Canceled'); },
    });

    widget.open();
  });
</script>
